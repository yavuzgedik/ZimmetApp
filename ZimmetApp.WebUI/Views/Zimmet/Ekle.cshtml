@model ZimmetApp.Entities.Models.ZimmetTanim
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var baslik = "Zimmet Ekle";
    var butonText = "Kaydet";
    var butonColor = "btn-primary";

    if (Model != null)
    {
        baslik = "Zimmet Güncelle";
        butonText = "Güncelle";
        butonColor = "btn-success";
    }

    var musteriler = ViewBag.Musteriler as List<ZimmetApp.Entities.Models.Musteri>;
}


<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card mb-4 mt-4">
            <div class="card-header">
                <i class="fa-solid fa-circle-plus"></i> @baslik
            </div>
            <div class="card-body">
                <form method="post" action="/Zimmet/Ekle">

                    @if (Model != null)
                    {
                        <input type="hidden" class="form-control" name="Id" value="@Model.Id">
                    }

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <input type="text" class="form-control" name="Aciklama" value="@(Model != null ? Model.Aciklama : "")">
                    </div>

                    @*<div class="row">
            <div class="col-lg-3">
                <label class="form-label">Açıklama</label>
            </div>
            <div class="col-9">
                <input type="text" class="form-control" name="Aciklama" value="@(Model != null ? Model.Aciklama : "")">
            </div>
        </div>*@

                    <div class="mb-3">
                        <label class="form-label">Url</label>
                        <input type="text" class="form-control" name="Url" value="@(Model != null ? Model.Url : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kayıt Kullanıcı Adı</label>
                        <input type="text" class="form-control" name="KayitKullaniciAdi" value="@(Model != null ? Model.KayitKullaniciAdi : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kayıt Telefon No</label>
                        <input type="text" class="form-control" name="KayitTelefonNo" value="@(Model != null ? Model.KayitTelefonNo : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Irtibat1</label>
                        <input type="text" class="form-control" name="Irtibat1" value="@(Model != null ? Model.Irtibat1 : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Irtibat2</label>
                        <input type="text" class="form-control" name="Irtibat2" value="@(Model != null ? Model.Irtibat2 : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Müşteri</label>
                        <select class="form-control" name="MusteriId">
                            <option value="null">Müşteri Seçiniz</option>
                            @foreach (var item in musteriler)
                            {
                                <option @(Model != null && Model.MusteriId == item.Id ? "selected" : "") 
                                        value="@item.Id">@item.MusteriAdi (@item.MusteriKod)</option>
                            }
                        </select>
                    </div>

                    

                    <button class="btn @butonColor" type="submit">
                        @butonText
                    </button>


                </form>
            </div>
        </div>
    </div>
</div>



